{% extends "base.html.twig" %}

{% block title %}
	Blog Eindopdracht
{% endblock %}

{% block content%}
	<h1>Blog Eindopdracht</h1>
	<section>
		{% for post in posts %}
			<article>
				<h2>
					<a href='./post/{{ post.filename }}'>{{ post.title }}</a>
				</h2>
				<p>
					Author:{{ post.author }}
				</p>
				<p>
					Publication:{{ post.publication }}
				</p>
				<p>
					{{ post.content }}
				</p>
			</article>
		{% else %}
			<p>No posts available.</p>
		{% endfor %}
	</section>
{% endblock %}
