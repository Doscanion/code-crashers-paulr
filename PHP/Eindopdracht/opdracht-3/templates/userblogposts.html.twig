{% extends "base.html.twig" %}

{% block title %}
	Blog Eindopdracht
{% endblock %}

{% block content%}
	<h1>Posts
		{{ post.author }}</h1>
	<section>
		{% for post in posts %}
			<article>
				<h2>{{ post.title }}
				</h2>
				<p>
					Author:{{ post.author }}
				</p>
				<p>
					Publication:{{ post.publication }}
				</p>
				<p>
					{{ post.content }}
				</p>
			</article>
			<a href='./{{ post.author }}/edit/{{ post.filename }}'>Edit</a>
		{% else %}
			<p>No posts available.</p>
		{% endfor %}
	</section>
{% endblock %}
